<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">vendor_kitchengallery_kitchen_form.kitchen_form_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="delete" class="Vendor\KitchenGallery\Block\Adminhtml\Kitchen\Edit\DeleteButton"/>
            <button name="save" class="Vendor\KitchenGallery\Block\Adminhtml\Kitchen\Edit\SaveButton"/>
            <button name="save_and_continue" class="Vendor\KitchenGallery\Block\Adminhtml\Kitchen\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>vendor_kitchengallery_kitchen_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>vendor_kitchengallery_kitchen_form.kitchen_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="kitchen_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="kitchengallery/kitchen/save"/>
        </settings>
        <dataProvider class="Vendor\KitchenGallery\Model\Kitchen\DataProvider" name="kitchen_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="entity_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="title" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>
        <field name="author" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Author</label>
            </settings>
        </field>
        <field name="image" formElement="imageUploader">
            <settings>
                <elementTmpl>ui/form/element/uploader/image</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Image</label>
                <visible>true</visible>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <uploaderConfig>
                            <param name="url" xsi:type="url" path="kitchengallery/kitchen/upload"/>
                        </uploaderConfig>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="category_id" formElement="select">
            <settings>
                <dataType>int</dataType>
                <label translate="true">Category</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Vendor\KitchenGallery\Model\Kitchen\Source\Category"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="content" formElement="wysiwyg">
            <settings>
                <label translate="true">Content</label>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="is_active" formElement="select">
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="number">1</item>
                                <item name="label" xsi:type="string" translate="true">Enabled</item>
                            </option>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="number">0</item>
                                <item name="label" xsi:type="string" translate="true">Disabled</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>

