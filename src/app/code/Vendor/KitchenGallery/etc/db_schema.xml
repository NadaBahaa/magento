<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    
    <!-- Category Table -->
    <table name="vendor_kitchengallery_category" resource="default" engine="innodb" comment="Kitchen Gallery Categories">
        <column xsi:type="int" name="entity_id" identity="true" unsigned="true" nullable="false" comment="Entity ID"/>
        <column xsi:type="varchar" name="title" length="255" nullable="false" comment="Category Title"/>
        <column xsi:type="smallint" name="is_active" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>

    <!-- Kitchen Table -->
    <table name="vendor_kitchengallery_kitchen" resource="default" engine="innodb" comment="Kitchen Gallery Kitchens">
        <column xsi:type="int" name="entity_id" identity="true" unsigned="true" nullable="false" comment="Entity ID"/>
        <column xsi:type="varchar" name="title" length="255" nullable="false" comment="Kitchen Title"/>
        <column xsi:type="varchar" name="author" length="255" nullable="true" comment="Author"/>
        <column xsi:type="varchar" name="image" length="255" nullable="true" comment="Image"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="true" comment="Category ID"/>
        <column xsi:type="text" name="content" nullable="true" comment="Content"/>
        <column xsi:type="smallint" name="is_active" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="VENDOR_KITCHENGALLERY_KITCHEN_CATEGORY_ID_VENDOR_KITCHENGALLERY_CATEGORY_ENTITY_ID"
                    table="vendor_kitchengallery_kitchen"
                    column="category_id"
                    referenceTable="vendor_kitchengallery_category"
                    referenceColumn="entity_id"
                    onDelete="SET NULL"/>
    </table>

</schema>

